<%- include('./includes/head.ejs') %>

</head>
<body>

    <%- include('./includes/nav.ejs') %>

    <div class="container py-3">

    <div class="d-flex border-bottom flex-column flex-md-row align-items-center justify-content-between">
        <h1 class="font-weight-light text-center">SDS011 sensor settings</h1>
    </div>

    <% if (errorMessage.length > 0) { %>
    <div class="alert alert-danger mt-3">
        <%= errorMessage %>
    </div>
    <% } %>

    <% if (successMessage.length > 0) { %>
    <div class="alert alert-success mt-3">
        <%= successMessage %>
    </div>
    <% } %>

    <form action="/settings/post-update" method="POST" class="py-3 text-md-left text-center">
        <div class="form-group">
            <label for="reportingMode">Reporting mode</label>
            <select class="form-control" id="reportingMode" name="reportingMode">
                <option value="active" <%= reportingMode == 'active' ? 'selected' : '' %>>active</option>
                <option value="query" <%= reportingMode == 'query' ? 'selected' : '' %>>query</option>
            </select>
        </div>
        <div class="form-group">
            <label for="workingPeriod">Working time</label>
            <input type="number" value="<%= workingPeriod %>" step="1" min="0" max="30" class="form-control" name="workingPeriod" id="workingPeriod">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    </div>

    <%- include('./includes/end.ejs') %>
